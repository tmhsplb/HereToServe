@model OPIDDaily.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<link href="@Url.Content("~/Content/login.css")" rel="stylesheet" />

<div class="login">
    <h1>Register for Here to Serve</h1>
    @using (Html.BeginForm("Register", "Account", new { ReturnURl = ViewBag.ReturnUrl, FormMethod.Post }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <p>@Html.TextBoxFor(m => m.Email, new { placeholder = "Email" })</p>
        <p>@Html.TextBoxFor(m => m.UserName, new { placeholder = "UserName" })</p>
        <p>@Html.PasswordFor(m => m.Password, new { placeholder = "Password" })</p>
        <p>@Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm Password" })</p>
        <p class="submit"><input type="submit" value="Register"></p>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
