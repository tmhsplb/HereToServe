@model OPIDDaily.Models.FileViewModel

@{
    ViewBag.Title = "Merge";
    Layout = "~/Views/Shared/_BackOffice.cshtml";
}

<br /><br /><br />
            <div>
                <fieldset>
                    <legend>OPID Daily File (Before Shutdown) </legend>

                    @using (Html.BeginForm("UploadOpidDailyFile", "BackOffice", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" }))
                    {
                        // Idea for
                        //   TextxboxFor(m => m.File, new { type = "file"})
                        // comes from https://stackoverflow.com/questions/304617/html-helper-for-input-type-file
                        @Html.AntiForgeryToken()
                        @Html.ValidationMessage("OPIDDailyError", new { @class = "text-danger" })

                        <table style="width:100%;">
                            <tr>
                                <td>
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.File, new { type = "file" })
                                    </div>
                                </td>
                                <td>
                                    <div class="form-group">
                                        <input type="submit" value="Upload" />
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @ViewData["UploadedOPIDDailyFile"]
                                </td>
                            </tr>
                        </table>
                    }
                </fieldset>

                <br /><br /><br />

