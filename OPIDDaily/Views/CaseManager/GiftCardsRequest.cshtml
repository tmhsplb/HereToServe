@model OPIDDaily.Models.GiftCardInventoryViewModel

@{
    ViewBag.Title = "Gift Cards Request";
    Layout = "~/Views/Shared/_CaseManager.cshtml";
}

<br /><br /><br /><br />

@using (Html.BeginForm("FulfillGiftCardsRequest", "CaseManager", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{


    @Html.AntiForgeryToken()
    @Html.ValidationMessage("ExceedsMETROBudgetError", new { @class = "text-danger" })
    @Html.ValidationMessage("ExceedsVisaBudgetError", new { @class = "text-danger" })

    <h4>Budgets</h4>
    <hr />

    <div class="form-group">
        <div class="col-md-2">
            @Html.TextBoxFor(m => m.METROBudget, new { @readonly = "readonly", @class = "form-control" })
        </div>
        <div class="col-md-2">
            @Html.LabelFor(m => m.METROBudget, new { @class = "control-label" })
        </div>
        <div class="col-md-2">
            @Html.TextBoxFor(m => m.VisaBudget, new { @readonly = "readonly", @class = "form-control" })
        </div>
        <div class="col-md-2">
            @Html.LabelFor(m => m.VisaBudget, new { @class = "control-label" })
        </div>
    </div>

    <br />
    <h4>Gift Cards</h4>
    <hr />

    <div class="row">
        <div class="col-md-12">
            <section id="giftcardsrequestForm">
                @* Table style: https://stackoverflow.com/questions/2637696/how-to-place-div-side-by-side *@

                <div style="width: 100%; display: table;">
                    <div style="display: table-row">
                        <div style="width: 30%; display: table-cell;">
                            @Html.RadioButtonFor(m => m.METROCard, "METROCard20")
                            @Html.LabelFor(m => m.METROCards20, new { @class = "control-label" })
                        </div>
                        <div style="width: 30%; display: table-cell;">
                            @Html.RadioButtonFor(m => m.VisaCard, "VisaCard20")
                            @Html.LabelFor(m => m.VisaCards20, new { @class = "control-label" })
                        </div>
                        <div style="width: 40%; display: table-cell;">&nbsp;</div>
                    </div>
                    <br />
                    <div style="display: table-row">
                        <div style="width: 30%; display: table-cell;">
                            @Html.RadioButtonFor(m => m.METROCard, "METROCard30")
                            @Html.LabelFor(m => m.METROCards30, new { @class = "control-label" })
                        </div>
                        <div style="width: 30%; display: table-cell;">
                            @Html.RadioButtonFor(m => m.VisaCard, "VisaCard30")
                            @Html.LabelFor(m => m.VisaCards30, new { @class = "control-label" })
                        </div>
                        <div style="width: 40%; display: table-cell;">&nbsp;</div>
                    </div>
                    <br />
                    <div style="display: table-row">
                        <div style="width: 30%; display: table-cell;">
                            @Html.RadioButtonFor(m => m.METROCard, "METROCard40")
                            @Html.LabelFor(m => m.METROCards40, new { @class = "control-label" })
                        </div>
                        <div style="width: 30%; display: table-cell;">
                            @Html.RadioButtonFor(m => m.VisaCard, "VisaCard40")
                            @Html.LabelFor(m => m.VisaCards40, new { @class = "control-label" })
                        </div>
                        <div style="width: 40%; display: table-cell;">&nbsp;</div>
                    </div>
                    <br />
                    <div style="display: table-row">
                        <div style="width: 30%; display: table-cell;">
                            @Html.RadioButtonFor(m => m.METROCard, "METROCard50")
                            @Html.LabelFor(m => m.METROCards50, new { @class = "control-label" })
                        </div>
                        <div style="width: 30%; display: table-cell;">
                            @Html.RadioButtonFor(m => m.VisaCard, "VisaCard50")
                            @Html.LabelFor(m => m.VisaCards50, new { @class = "control-label" })
                        </div>
                        <div style="width: 40%; display: table-cell;">&nbsp;</div>
                    </div>
                </div>

                <br />
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Submit" class="btn btn-default" />
                    </div>
                </div>

            </section>

        </div>
    </div>
}

