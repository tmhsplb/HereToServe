
@{
    ViewBag.Title = "Clients";
    Layout = "~/Views/Shared/_Interviewer.cshtml";
}

<br /><br /><br />

<div>
    <table id="clientsGrid"></table>
    <div id="clientsPager"></div>
</div>

<link href="@Url.Content("~/Content/themes/base/jquery.ui.all.css")" rel="stylesheet" />
<link href="@Url.Content("~/Content/jquery.jqGrid/ui.jqgrid.css")" rel="stylesheet" />

<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/i18n/grid.locale-en.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.jqGrid.min.js")" type="text/javascript"></script>

<script type="text/javascript">
    $("#clientsGrid").jqGrid({
        url: "@Url.Action("GetClients", "Interviewer")",
        datatype: "json",
        mtype: "Get",
        colNames: ['Id', 'Referral Date', 'Appearance Date', 'Last Name', 'First Name', 'Middle Name', 'Birth Name', 'Notes'],
        colModel: [
        { key: true, hidden: true, name: 'Id', index: 'Id' },
        { key: false, align: 'center', name: 'ReferralDate', index: 'ReferralDate', width: 150, editable: false, sortable: true, search: false },
        { key: false, align: 'center', name: 'AppearanceDate', index: 'AppearanceDate', width: 150, editable: false, sortable: true, search: false },
        { key: false, name: 'LastName', index: 'LastName', width: 150, editable: true, sortable: false, search: false },
        { key: false, name: 'FirstName', index: 'FirstName', width: 150, editable: true, sortable: false, search: false },
        { key: false, name: 'MiddleName', index: 'MiddleName', width: 150, editable: true, sortable: false, search: false },
        { key: false, name: 'BirthName', index: 'BirthName', width: 150, editable: true, sortable: false, search: false },
        { key: false, name: 'Notes', index: 'Notes', width: 150, editable: true, sortable: false, search: false, edittype: 'textarea', editoptions: { rows: '2', columns: '10' }  } 
        ],
        pager: jQuery('#clientsPager'),
        rowNum: 20,
        rowList: [5, 10, 15, 20],
        height: "100%",
        viewrecords: true,
        loadonce: false,
        caption: 'Clients',
        emptyrecords: 'No records to display',
        jsonReader: {
            root: "rows",
            page: "page",
            total: "total",
            records: "records",
            repeatitems: false,
            id: "Id"
        },
        autowidth: true,
        multiselect: false
    })

    jQuery("#clientsGrid").jqGrid('navGrid', '#clientsPager', { edit: true, add: false, del: false, search: false, refresh: true },
      {
          zIndex: 100,
          url: "@Url.Action("EditClient", "Interviewer")",
          closeOnEscape: true,
          closeAfterEdit: true,
          recreateForm: true,
          afterComplete: function (response) {
              if (response.responseText) {
                  if (response.responseText == "Registered") {
                     alert("Cannot edit a user who has registered");
                  }
              }
          }
      },
             
      );

    // http://www.trirand.com/blog/?page_id=393/help/how-to-use-add-form-dialog-popup-window-set-position
    $.extend($.jgrid.edit, {
        recreateForm: true,
        closeAfterAdd: true,
        dataheight: '100%',
        reloadAfterSubmit: true,
        width: 500,
        top: 400,
        left: 450,
        editCaption: "Edit Client",
        bSubmit: "Submit",
        bCancel: "Cancel",
        bClose: "Close",
        saveData: "Data has been changed! Save changes?",
        bYes: "Yes",
        bNo: "No",
        bExit: "Cancel"
    });
</script>