<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - OPID Daily</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/DataTables/css")

    @Scripts.Render("~/bundles/modernizr")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/mvc5datatables")
    @RenderSection("scripts", required: false)

    <style>
        /* https://stackoverflow.com/questions/24127521/change-bootstrap-navbar-background-color-and-font-color */
        .navbar-custom {
            background-color: WhiteSmoke;
        }

        .navbar-inverse .navbar-nav > li > a {
            color: black;
        }

            .navbar-inverse .navbar-nav > li > a:hover {
                color: blue;
            }
    </style>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top navbar-custom">
        <div class="container">
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Home", "BackOffice")</li>
                    <li>@Html.ActionLink("Dashboard", "ManageDashboard", "BackOffice")</li>
                    <li>@Html.ActionLink("Demographics", "GetDemographicInfo", "BackOffice")</li>
                    <li>@Html.ActionLink("Service Request", "ServiceRequest", "BackOffice")</li>
                    <li>@Html.ActionLink("Service Ticket", "BackOfficeServiceTicket", "BackOffice")</li>
                    <li>@Html.ActionLink("Pocket Checks", "ManagePocketChecks", "BackOffice")</li>
                    <li>@Html.ActionLink("PCR", "PocketChecksReport", "BackOffice")</li>
                    <li>@Html.ActionLink("Merge", "Merge", "BackOffice")</li>
                    <li>@Html.ActionLink("Resolved", "Resolved", "BackOffice")</li>
                    <li>@Html.ActionLink("RChecks", "RecentChecks", "BackOffice")</li>
                    <li>@Html.ActionLink("AChecks", "AncientChecks", "BackOffice")</li>
                    @*<li>@Html.ActionLink("Review", "Review", "BackOffice")</li>*@
                </ul>
                @Html.Partial("_LoginPartial")
                @Html.Partial("_EnvironmentPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        @Html.Partial("_Footer")
    </div>
</body>
</html>
