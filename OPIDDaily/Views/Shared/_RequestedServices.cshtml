
@model OPIDDaily.Models.RequestedServicesViewModel

<link rel="stylesheet" href="@Url.Content("~/Content/serviceTicket.css")" type="text/css" />
<script type="text/javascript" src="@Url.Content("~/Scripts/serviceTicket.js")"></script>

<div id="requestedServicesTable">
    <h4>Requested Services</h4>
    <hr />
    <table id="requestedServices" width="100%">
        <tr><th>Item</th><th>Check</th><th>Notes</th></tr>
        @if (Model.BC)
        {
            <tr>
                <td align="center" width="80">BC</td>
                <td width="120"></td>
                <td width="200" style="padding-left: 10px">@Model.BCNotes</td>
            </tr>
        }

        @if (Model.MBVD)
        {
            <tr>
                <td align="center" width="80">MBVD</td>
                <td width="120"></td>
                <td width="200" style="padding-left: 10px">@Model.MBVDNotes</td>
            </tr>
        }
        @if (Model.NewTID)
        {
            <tr>
                <td align="center" width="80">New/Renewal TID</td>
                <td width="120"></td>
                <td width="200" style="padding-left: 10px">@Model.TIDNotes</td>
            </tr>
        }
        @if (Model.ReplacementTID)
        {
            <tr>
                <td align="center" width="80">Replacement TID</td>
                <td width="120"></td>
                <td width="200" style="padding-left: 10px">@Model.TIDNotes</td>
            </tr>
        }

        @if (Model.NewTDL)
        {
            <tr>
                <td align="center" width="80">New/Renenwal TDL</td>
                <td width="120"></td>
                <td width="200" style="padding-left: 10px">@Model.TDLNotes</td>
            </tr>
        }
        @if (Model.ReplacementTDL)
        {
            <tr>
                <td align="center" width="80">Replacement TDL</td>
                <td width="120"></td>
                <td width="200" style="padding-left: 10px">@Model.TDLNotes</td>
            </tr>
        }
        @if (Model.METROGiftCard)
        {
            <tr>
                <td align="center" width="80">METRO Card</td>
                <td align="center" width="120">$@Model.METROGiftCardAmount</td>
                <td width="200" style="padding-left: 10px" >@Model.METROGiftCardNotes</td>
            </tr>
        }
        @if (Model.VisaGiftCard)
        {
            <tr>
                <td align="center" width="80">VISA Card</td>
                <td align="center" width="120">$@Model.VisaGiftCardAmount</td>
                <td width="200" style="padding-left: 10px">@Model.VisaGiftCardNotes</td>
            </tr>
        }
        @if (Model.Numident)
        {
            <tr>
                <td align="center" width="80">Vitals Check</td>
                <td width="120"></td>
                <td width="200"></td>
            </tr>
        }
        @if (!string.IsNullOrEmpty(Model.RequestedDocument))
        {
            <tr>
                <td align="center" width="80">Requested Document</td>
                <td width="120" style="padding-left: 10px">@Model.RequestedDocument</td>
                <td width="200"></td>
            </tr>
        }
        @if (Model.TrackingOnly)
        {
            <tr>
                <td colspan="3" style="padding-left: 10px">Tracking Only</td>
            </tr>
        }
        @if (!string.IsNullOrEmpty(Model.Notes))
        {
            <tr>
                <td colspan="3" style="padding-left: 10px"><strong>@Model.Notes</strong></td>
            </tr>
        }
    </table>
   
</div>

